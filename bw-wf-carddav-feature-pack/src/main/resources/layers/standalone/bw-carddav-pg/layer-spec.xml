<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0"
            name="bw-carddav-pg">
    <dependencies>
        <layer name="bw-tzserver"/>
        <layer name="bw-postgresql"/>
    </dependencies>

    <packages>
        <package name="config.carddav-pg"/>
        <package name="deploy.carddav"/>
        <package name="deploy.xml"/>
    </packages>

    <feature spec="domain.system-property">
        <param name="system-property" value="org.bedework.db.url.carddav"/>
        <param name="value"
               value="${org.bedework.site.db.url.carddav:jdbc:postgresql:localhost:5432/carddb}"/>
    </feature>

    <feature spec="domain.system-property">
        <param name="system-property" value="org.bedework.db.id.carddav"/>
        <param name="value"
               value="${org.bedework.site.db.id.carddav:bw}"/>
    </feature>

    <feature spec="domain.system-property">
        <param name="system-property" value="org.bedework.db.pw.carddav"/>
        <param name="value"
               value="${org.bedework.site.db.carddav.pw:bw}"/>
    </feature>

    <feature spec="subsystem.datasources">
        <feature spec="subsystem.datasources.data-source">
            <param name="data-source"           value="CardDS"/>
            <param name="use-ccm"               value="false"/>
            <param name="use-java-context"      value="true"/>
            <param name="jndi-name"             value="java:/CardDS"/>
            <param name="connection-url"        value="${org.bedework.db.url.carddav}"/>
            <param name="driver-name"           value="postgresql"/>
            <param name="user-name"             value="${org.bedework.db.id.carddav}"/>
            <param name="password"              value="${org.bedework.db.pw.carddav}"/>
            <param name="jta"                   value="true"/>
            <param name="min-pool-size" value="1" />
            <param name="max-pool-size" value="50" />
            <param name="pool-prefill" value="true" />
            <param name="valid-connection-checker-class-name"
                   value="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLValidConnectionChecker" />
            <param name="validate-on-match" value="true" />
            <param name="exception-sorter-class-name"
                   value="org.jboss.jca.adapters.jdbc.extensions.postgres.PostgreSQLExceptionSorter"/>
            <param name="idle-timeout-minutes" value="15" />
        </feature>
    </feature>
</layer-spec>