<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Object to represent the configuration state of the carddav server.
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.carddav.util.CardDAVConfig"
         table="bwcdav" >
    <cache usage="read-write"/>
    
    <id name="id" type="long" column="bwcdv_id">
      <generator class="native"/>
    </id>

    <!-- db entity properties -->

    <version name="seq" column="bwcdv_seq" type="integer" />

    <property name="appName" column="bwcdv_appname" type="string" length="250"
              unique="true"
              not-null="true" />

    <property name="sysintfImpl" column="bwcdv_sysintf" 
              type="string" length="1000" not-null="true" />

    <property name="webaddrServiceURI" column="bwcdv_waddrsvcuri" 
              type="string" length="1000" />

    <property name="webaddrServicePropertiesList" column="bwcdv_waddrsvcprops" 
              type="string" length="1000" />

    <property name="webaddrPublicAddrbook" column="bwcdv_waddrpubaddrbook" 
              type="string" length="200" />

    <property name="directoryBrowsingDisallowed"
              column="bwcdv_nodirbrowse"
              type="true_false" />

    <property name="defaultAddressbook" column="bwcdv_defaddrbook" 
              type="string" length="200" />

    <property name="addressBookHandlerPrefix" column="bwcdv_addrbookhdlrpfx" 
              type="string" length="200" />

    <property name="userHomeRoot" column="bwcdv_userhome" 
              type="string" length="200" />

    <set name="properties" table="bwcdv_properties"
         cascade="all,delete-orphan"
         lazy="false">
      <key column="id" foreign-key="bwcdv_pid_fk" />
      <composite-element class="org.bedework.carddav.util.CarddavProperty">
        <property name="name" type="string" length="200"
                  column="bwcdv_pname"  />

        <property name="value" column="bwcdv_pvalue" type="text"/>
      </composite-element>
    </set>

    <set name="handlerConfigs" table="bwcdv_handlers"
         cascade="all,delete-orphan"
         lazy="false">
      <key column="bwcdvhdlr_id" foreign-key="bwcdvhdlr_fk" />
      <one-to-many class="org.bedework.carddav.util.DirHandlerConfig" />
    </set>
  </class>
</hibernate-mapping>

