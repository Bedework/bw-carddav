<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- ===================================================================
     Object to represent the configuration state of the carddav server.
     =================================================================== -->

<hibernate-mapping>
  <class name="org.bedework.carddav.util.DirHandlerConfig"
         table="bwcdav_dirhandler" >
    <cache usage="read-write"/>
    
    <id name="id" type="long" column="bwcdv_id">
      <generator class="native"/>
    </id>

    <!-- db entity properties -->

    <version name="seq" column="bwcdv_seq" type="integer" />

    <property name="pathPrefix" column="bwcdv_pathPrefix" 
              type="string" length="500"
              unique="true"
              not-null="true" />

    <property name="cardPathPrefix" column="bwcdv_cardPathPrefix" 
              type="string" length="1000" not-null="true" />

    <property name="cardPathPrefixes" column="bwcdv_cardPathPrefixes" 
              type="string" length="1000" />

    <property name="addressBook"
              column="bwcdv_addressBook"
              type="true_false" />

    <property name="className" column="bwcdv_className" 
              type="string" length="1000" />

    <property name="ownerHref" column="bwcdv_ownerHref" 
              type="string" length="200" />

    <property name="cardKind" column="bwcdv_cardKind" 
              type="string" length="200" />

    <property name="debug"
              column="bwcdv_debug"
              type="true_false" />

    <set name="properties" table="bwcdv_properties"
         cascade="all,delete-orphan"
         lazy="false">
      <key column="id" foreign-key="bwcdvdh_pid_fk" />
      <composite-element class="org.bedework.carddav.util.CarddavProperty">
        <property name="name" type="string" length="200"
                  column="bwcdv_pname"  />

        <property name="value" column="bwcdv_pvalue" type="text"/>
      </composite-element>
    </set>
  </class>
</hibernate-mapping>

